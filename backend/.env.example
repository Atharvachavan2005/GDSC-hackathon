# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server port
PORT=3001

# JWT secret for authentication (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Google Gemini AI API Key (get from https://makersuite.google.com/app/apikey)
GOOGLE_AI_KEY=your-gemini-api-key-here

# Frontend URL for CORS (update with your Vercel URL in production)
FRONTEND_URL=http://localhost:8080

# For production, use:
# FRONTEND_URL=https://your-app.vercel.app
# NODE_ENV=production
